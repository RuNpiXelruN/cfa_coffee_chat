<div id="editlocation-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Edit your bio..your're cooler than that!</h4>
      </div>
      <div class="modal-body">
          <%= form_for location do |f| %>
            <div>
              <span class="model-label"><%= f.label :address %></span>
              <p><%= f.text_field :address, class: "modal-input" %><p>
            </div>
            <div>
              <span class="model-label"><%= f.label :suburb %></span>
              <p><%= f.text_field :suburb, class: "modal-input" %><p>
            </div>
            <div>
              <span class="model-label"><%= f.label :state %></span>
              <p><%= f.text_field :state, class: "modal-input" %><p>
            </div>
            <div>
              <span class="model-label"><%= f.label :country %></span>
              <p><%= f.text_field :country, class: "modal-input" %><p>
            </div>
            <div>
              <span class="model-label"><%= f.label :postcode %></span>
              <p><%= f.text_field :postcode, class: "modal-input" %><p>
            </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Update", class: "btn btn-info" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
