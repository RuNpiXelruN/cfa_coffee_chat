<%= form_for [profile, Post.new] do |f| %>
  <div>
    <p><%= f.text_field :title, placeholder: "Enter title..", class: 'form-control' %></p>
    <p><%= f.text_area :body, placeholder: "Enter description..", rows: 8, class: 'form-control' %></p>
    <%= f.submit "Add Post!", class: "btn btn-primary" %>
  </div>
<% end %>
